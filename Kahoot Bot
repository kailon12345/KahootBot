-- SCOREBOARD LOGIC
local function GetSortedScores()
    local scores = {}
    for name, s in pairs(PlayerScores) do table.insert(scores, {n = name, s = s}) end
    table.sort(scores, function(a, b) return a.s > b.s end)
    return scores
end

local function ShowCurrentTop3()
    if MyRole ~= "scoreboard" then return end
    local scores = GetSortedScores()
    if #scores == 0 then return end
    
    local msg = ""
    for i = 1, math.min(3, #scores) do
        local ordinal = (i==1 and "1st") or (i==2 and "2nd") or (i==3 and "3rd")
        msg = msg .. ordinal .. " " .. scores[i].n .. " (" .. scores[i].s .. ") | "
    end
    Say(msg)
end

local function CelebrateWinners()
    if MyRole ~= "scoreboard" then return end
    local scores = GetSortedScores()
    if #scores == 0 then return end

    -- Announce Winners
    for i = 1, math.min(3, #scores) do
        task.wait(1.5)
        if i == 1 then Say("ðŸ† " .. scores[i].n .. " got 1st place with " .. scores[i].s .. " points ðŸ†")
        elseif i == 2 then Say("ðŸ¥ˆ " .. scores[i].n .. " got 2nd place with " .. scores[i].s .. " points ðŸ¥ˆ")
        elseif i == 3 then Say("ðŸ¥‰ " .. scores[i].n .. " got 3rd place with " .. scores[i].s .. " points ðŸ¥‰")
        end
    end
    
    task.wait(2)
    Say("Acknowledging all participants...")
    
    -- Walk Up Routine
    for _, data in ipairs(scores) do
        local pName = data.n
        local targetPlayer = nil
        for _, p in pairs(Players:GetPlayers()) do
            if p.DisplayName == pName or p.Name == pName then targetPlayer = p break end
        end
        
        if targetPlayer and targetPlayer.Character and targetPlayer.Character:FindFirstChild("HumanoidRootPart") then
            local tRoot = targetPlayer.Character.HumanoidRootPart
            -- Calculate position 4 studs in front, looking at player
            local frontPos = tRoot.CFrame * CFrame.new(0, 0, -4) 
            local lookAt = CFrame.lookAt(frontPos.Position, tRoot.Position)
            
            Teleport(lookAt)
            task.wait(0.2)
            Say("/e point")
            task.wait(1.5)
        end
    end
    
    -- Return to perch
    if PerchPosition then
        Teleport(PerchPosition)
    end
    
    -- Clear Scores
    PlayerScores = {}
    AnswerSubmissions = {}
end

-- HOST LOGIC
local function StartQuiz(length)
    if MyRole ~= "host" then return end
    GameActive = true
    PlayerScores = {}
    local UsedQuestions = {}
    local rounds = math.clamp(tonumber(length) or #Questions, 1, #Questions)
    
    Say("Welcome to Schweins Kahoot!")
    task.wait(3)
    Say("Introduce yourself bots")
    task.wait(32) 
    
    Say("Beginning " .. rounds .. " rounds. Answer by typing 1, 2, 3, or 4!")
    task.wait(4)
    
    for i = 1, rounds do
        if not GameActive then break end
        local pick
        repeat pick = math.random(1, #Questions) until not UsedQuestions[pick]
        UsedQuestions[pick] = true
        
        local qData = Questions[pick]
        Say("Question " .. i .. ": " .. qData.q)
        task.wait(4)
        
        Say("Options: (1) " .. qData.a[1] .. " (2) " .. qData.a[2] .. " (3) " .. qData.a[3] .. " (4) " .. qData.a[4])
        task.wait(8)
        
        Say("The correct answer was Option " .. qData.c .. ": " .. qData.a[qData.c])
        task.wait(3)
        Say("Checking the leaderboard...")
        task.wait(5) 
    end
    
    if GameActive then
        GameActive = false
        Say("ðŸ† THE QUIZ HAS ENDED! THANKS FOR PLAYING! ðŸ†")
    end
end

-- CHAT HANDLER
local function OnChat(player, message)
    -- Wrap in task.spawn to prevent yielding the chat event
    task.spawn(function()
        local msg = message:lower()
        local isOwner = (player.UserId == getgenv().ownerID or player.Name == getgenv().owner)

        -- COMMANDS
        if msg == getgenv().prefix .. "check" and MyRole then
            Say("Bot: " .. LocalPlayer.Name .. " | Role: " .. MyRole)
        end

        if isOwner then
            if msg:sub(1, #getgenv().prefix + 5) == getgenv().prefix .. "start" then
                local args = msg:split(" ")
                StartQuiz(args[2]) -- Removed task.spawn here as StartQuiz yields internally anyway
                
            elseif msg == getgenv().prefix .. "end" then
                GameActive = false
                PlayerScores = {}
                AnswerSubmissions = {}
                if MyRole == "host" then Say("â¹ï¸ Game Forced Ended. Scores Reset.") end
                
            elseif msg == getgenv().prefix .. "setup" then
                 local ownerChar = player.Character
                 if ownerChar then
                    local root = ownerChar.HumanoidRootPart.CFrame
                    -- FIX: Ensure we use horizontal look vector so bots don't spawn underground
                    local forward = root.LookVector * Vector3.new(1, 0, 1)
                    local startPos = root.Position + (forward.Unit * 15)
                    local flatRot = CFrame.lookAt(startPos, startPos + forward)

                    if MyRole == "host" then Teleport(flatRot * CFrame.new(-16, 0, 0))
                    elseif MyRole == "answer1" then Teleport(flatRot * CFrame.new(-8, 0, 0))
                    elseif MyRole == "answer2" then Teleport(flatRot * CFrame.new(0, 0, 0))
                    elseif MyRole == "answer3" then Teleport(flatRot * CFrame.new(8, 0, 0))
                    elseif MyRole == "answer4" then Teleport(flatRot * CFrame.new(16, 0, 0))
                    elseif MyRole == "scoreboard" then 
                        task.wait(0.6) 
                        -- Perch: Above Answer 2 (0, 0, 0) -> Up 10, Back 5
                        PerchPosition = flatRot * CFrame.new(0, 10, 5)
                        Teleport(PerchPosition) 
                    end
                 end
            end
        end

        -- GAME EVENTS
        if message == "Introduce yourself bots" then
            if MyRole == "answer1" then task.wait(5) Say("I am Answer Bot 1!") Say("/e wave")
            elseif MyRole == "answer2" then task.wait(10) Say("I am Answer Bot 2!") Say("/e wave")
            elseif MyRole == "answer3" then task.wait(15) Say("I am Answer Bot 3!") Say("/e wave")
            elseif MyRole == "answer4" then task.wait(20) Say("I am Answer Bot 4!") Say("/e wave")
            elseif MyRole == "scoreboard" then task.wait(25) Say("And I am the Scoreboard!") Say("/e wave") end
        end

        if message:find("Options:") then
            AnswerSubmissions = {}
            QuestionStartTime = tick()
            for _, q in pairs(Questions) do
                if message:find(q.a[1], 1, true) and message:find(q.a[4], 1, true) then
                    if MyRole and MyRole:find("answer") then
                        local botIdx = tonumber(MyRole:match("%d+"))
                        task.wait(math.random(1, 3)) 
                        Say(q.a[botIdx])
                    end
                    break
                end
            end
        end

        if message:find("The correct answer was Option") and MyRole == "scoreboard" then
            local correct = tonumber(message:match("Option (%d+)"))
            local winners = {}
            for name, data in pairs(AnswerSubmissions) do
                if data.ans == correct then table.insert(winners, {n = name, t = data.time}) end
            end
            table.sort(winners, function(a, b) return a.t < b.t end)
            for i, v in ipairs(winners) do
                PlayerScores[v.n] = (PlayerScores[v.n] or 0) + math.max(1, 11 - i)
            end
        end

        if message == "Checking the leaderboard..." then
            ShowCurrentTop3()
        end
        
        if message == "ðŸ† THE QUIZ HAS ENDED! THANKS FOR PLAYING! ðŸ†" then
            CelebrateWinners()
        end

        -- PARTICIPATION
        if MyRole == "scoreboard" and (tonumber(msg) and tonumber(msg) >= 1 and tonumber(msg) <= 4) then
            if not AnswerSubmissions[player.DisplayName] then
                AnswerSubmissions[player.DisplayName] = {ans = tonumber(msg), time = tick() - QuestionStartTime}
            end
        end
    end)
end

for _, p in pairs(Players:GetPlayers()) do p.Chatted:Connect(function(m) OnChat(p, m) end) end
Players.PlayerAdded:Connect(function(p) p.Chatted:Connect(function(m) OnChat(p, m) end) end)

-- Optional: FPS Cap for performance
pcall(function() setfpscap(getgenv().fpslimit) end)
