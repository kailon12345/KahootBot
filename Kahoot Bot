-- KAHOOT BOT CONFIGURATION
getgenv().owner = "i8agy" 
getgenv().ownerID = 7789664710 
getgenv().prefix = ";" 
getgenv().fpslimit = 30 
getgenv().bots = {
    "i8agy70", "i8agy71", "i8agy72", "i8agy38", "i8agy36", "urination_king"
}

-- SERVICES
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local TextChatService = game:GetService("TextChatService")
local LocalPlayer = Players.LocalPlayer

-- WAIT FOR LOAD
if not LocalPlayer.Character then LocalPlayer.CharacterAdded:Wait() end

-- ROLE ASSIGNMENT
local MyRole = nil
for i, botName in pairs(getgenv().bots) do
    if LocalPlayer.Name:lower() == botName:lower() then
        if i == 1 then MyRole = "host"
        elseif i == 2 then MyRole = "answer1"
        elseif i == 3 then MyRole = "answer2"
        elseif i == 4 then MyRole = "answer3"
        elseif i == 5 then MyRole = "answer4"
        elseif i == 6 then MyRole = "scoreboard"
        end
        break
    end
end

-- Stop script if not a bot or owner
if not MyRole and LocalPlayer.Name ~= getgenv().owner then 
    warn("Kahoot Script: Not a configured bot or owner.")
    return 
end

print("Kahoot Script Loaded. Role: " .. (MyRole or "Owner"))

-- HELPER FUNCTIONS
local function Say(msg)
    if not msg then return end
    local cleanMsg = tostring(msg)
    
    -- Legacy Chat Support
    local sayMessage = ReplicatedStorage:FindFirstChild("SayMessageRequest", true)
    if sayMessage then
        sayMessage:FireServer(cleanMsg, "All")
    else
        -- TextChatService Support
        local general = TextChatService:FindFirstChild("RBXGeneral", true)
        if general and general:IsA("TextChannel") then
            general:SendAsync(cleanMsg)
        end
    end
end

local function Teleport(cframe)
    if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
        LocalPlayer.Character.HumanoidRootPart.CFrame = cframe
        
        -- Scoreboard Platform Logic
        if MyRole == "scoreboard" then
            if workspace:FindFirstChild(LocalPlayer.Name .. "_Platform") then 
                workspace[LocalPlayer.Name .. "_Platform"]:Destroy() 
            end
            
            -- Only create platform if we are high up (likely the perch position)
            if cframe.Position.Y > (LocalPlayer.Character.HumanoidRootPart.Position.Y - 2) and cframe.Position.Y > 0 then
                 local plat = Instance.new("Part")
                 plat.Name = LocalPlayer.Name .. "_Platform"
                 plat.Size = Vector3.new(4, 1, 4)
                 plat.CFrame = CFrame.new(cframe.Position - Vector3.new(0, 3.5, 0))
                 plat.Transparency = 1
                 plat.CanCollide = true
                 plat.Anchored = true
                 plat.Parent = workspace
            end
        end
    end
end

